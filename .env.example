# Docker环境配置
# 复制此文件为 .env 并修改为实际值
# cp .env.example .env

# MySQL配置
MYSQL_ROOT_PASSWORD=root123456
MYSQL_DATABASE=admin_system
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci

# 后端数据库连接配置
DB_HOST=mysql
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root123456
DB_NAME=admin_system
DB_CHARSET=utf8mb4

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your-secret-key-change-in-production-please-use-strong-random-string
JWT_EXPIRE_HOURS=72
JWT_REFRESH_THRESHOLD_HOURS=24

# 服务配置
SERVER_PORT=9001
SERVER_MODE=release
